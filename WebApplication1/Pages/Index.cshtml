@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div style="min-height:75vh;" class="text-center">
	<div class="row">
			<div class="col-lg-7 col-12">
					<h1 class="text-lg-start display-2 fw-bold">Pizza has never tasted this good</h1>
					<p class="text-lg-start fs-6">Locally-sourced ingredients to excite your taste buds</p>
					<div class="container-fluid text-lg-start ps-0">
