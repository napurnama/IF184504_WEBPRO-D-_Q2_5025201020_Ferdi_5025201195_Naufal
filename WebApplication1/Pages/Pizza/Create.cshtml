    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pizza.ImagePath" class="control-label"></label>
                <input asp-for="Pizza.ImagePath" class="form-control" />
                <span asp-validation-for="Pizza.ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.PizzaName" class="control-label"></label>
