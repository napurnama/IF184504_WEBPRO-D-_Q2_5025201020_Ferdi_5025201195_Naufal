            <div class="form-group">
                <label asp-for="Pizza.PizzaPrice" class="control-label"></label>
                <input asp-for="Pizza.PizzaPrice" class="form-control" />
                <span asp-validation-for="Pizza.PizzaPrice" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pizza.Tomato" /> @Html.DisplayNameFor(model => model.Pizza.Tomato)
